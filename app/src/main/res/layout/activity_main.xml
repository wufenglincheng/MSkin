<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_pane_layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!--  页面内容 -->
    <include layout="@layout/main_activity" />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/skin_background"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/skin_focus" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:onClick="defaultTheme"
            android:text="日间模式"
            android:textColor="@color/skin_textColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/skin_sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:onClick="nightTheme"
            android:text="夜间模式"
            android:textColor="@color/skin_textColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/skin_sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:onClick="color1Theme"
            android:layout_marginTop="250dp"
            android:text="颜色1"
            android:textColor="@color/skin_textColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/skin_sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="300dp"
            android:gravity="center"
            android:onClick="color2Theme"
            android:text="颜色2"
            android:textColor="@color/skin_textColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/skin_sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:onClick="color3Theme"
            android:text="颜色3"
            android:layout_marginTop="350dp"
            android:textColor="@color/skin_textColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/skin_sp" />
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>